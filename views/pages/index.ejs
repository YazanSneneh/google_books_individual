<!DOCTYPE html>
<html lang="en">

<%- include('../layout/head')%>

  <body>
    <%- include('../layout/navbar')%>
      <header>
        <h2> COUNT : <%= total %>
        </h2>
        <h1>Search the Google API</h1>
      </header>
      <main>
        <div class="grid">
          <div class="grid-item">
            <% data.forEach(item=>{ %>
              <article class="book">
                <img src=<%=item.image_url %>>
                <h5>
                  <%= item.title %>
                </h5>
                <h4 class="">
                  <%= item.author %>
                </h4>
                <button> <a href="/books/ <%= item.id %>"> View Details
                  </a></button>
              </article>
              <% }) %>
          </div>
        </div>

      </main>
  </body>
  <script src="https://code.jquery.com/jquery-3.4.1.js"></script>

</html>